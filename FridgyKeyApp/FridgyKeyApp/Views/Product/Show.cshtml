@model FK.Models.Product

@{
    ViewData["Title"] = "Show Product";
}

<h2>Product Info</h2>

<h4>Fridge</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            <img src="@Model.ImgURL" height="250" /><p />
            <label asp-for="Name" class="control-label"></label>
            @Html.DisplayFor(m => m.Name)
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            @Html.DisplayFor(m => m.Description)
        </div>
        <div class="form-group">
            <b>Kkal: </b> @Model.Kkal<p/>
            <b>f/c/p: </b> @Model.Fat / @Model.Carb / @Model.Protein <p/>
        </div> 
        <div class="form-group">
            <a href="/Product/Edit/@Model.Id">[Edit]</a><p/>
            <a href="Product/Delete/@Model.Id">[Delete]</a>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="UserFridge">Back to List</a>
</div>

