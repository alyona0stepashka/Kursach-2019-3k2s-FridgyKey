@model List<ProductInfoViewModel>
@{
    ViewData["Title"] = "Index";
}
<h2>Products</h2>

<h4>Products</h4>
<hr />
<div class="row"> 
        <a href="/Product/Create">[CreateProduct]</a><p/>
        <table class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th class="text-center">Image</th>
                    <th class="text-center">Name</th>
                    <th class="text-center">UserName</th>
                    <th class="text-center">f/c/p</th>
                    <th class="text-center">kkal</th> 
                </tr>
            </thead> 

            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr class="text-center">
                        <td><img src="@Model[i].ImgURL" height="100"/></td>
                        <td><a href="/Product/Show/@Model[i].ProductId">@Model[i].Name</a></td> 
                        <td><a href="/User/Show/@Model[i].UserId">@ViewBag.UserName[i]</a></td>
                        <td>@Model[i].Fat / @Model[i].Carb / @Model[i].Protein</td>
                        <td>@Model[i].Kkal</td> 
                        <td><a href="/Product/Edit/@Model[i].ProductId">[Edit]</a><p/><a href="/Product/Delete/@Model[i].ProductId">[Delete]</a></td>
                    </tr>
                }
            </tbody>
        </table> 
</div>

